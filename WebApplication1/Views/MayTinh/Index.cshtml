@model MayTinhModel
<h2>Tính toán đơn giản</h2>
<hr />
<form asp-action="XuLy" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label>Nhập số thứ 1</label>
        <input asp-for="So1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nhập số thứ 2</label>
        <input asp-for="So2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Chọn phép tính</label>
        <select name="PhepTinh" class="form-control">
            <option value="+">Cộng</option>
            <option value="-">Trừ</option>
            <option value="*">Nhân</option>
            <option value="/">Chia</option>
        </select>
    </div>
    <button type="submit" class="btn btn-danger">Tính</button>
</form>

@if (Model.Ketqua.KQ != null)
            {
                <h4 class="pt-2">Kết quả: @ViewBag.KQ</h4>
            }